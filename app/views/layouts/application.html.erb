<!doctype html>
<html class="no-js" lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Photo Market</title>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <style>
    .top-bar {background-color: #1F6C87;}
    .menu {background-color: #1F6C87;}
    </style>

  </head>
  <body>


    <!-- Start Top Bar -->
    <div class="top-bar">
      <div class="top-bar-left" >
        <ul class="menu">
          <li class="menu-text">Photo Market</li>
          <li><a href="#">Register</a></li>
          <li><%= link_to('Checkout', cart_path(session[:cart_id]))%></li>
          <li><a> <%= shopping_cart_message %></a></li>
        </ul>
      </div>
    </div>

    <!-- End Top Bar -->

    <div class="orbit" role="region" aria-label="Featured images" data-orbit>
      <ul class="orbit-container">
        <button class="orbit-previous"><span class="show-for-sr">Previous Slide</span>&#9664;&#xFE0E;</button>
        <button class="orbit-next"><span class="show-for-sr">Next Slide</span>&#9654;&#xFE0E;</button>
        <li class="is-active orbit-slide">
          <%= image_tag 'https://unsplash.it/2000/750' %>
          <figcaption class="orbit-caption">Space, the final frontier.</figcaption>
        </li>
        <li class="orbit-slide">
          <%= image_tag 'https://unsplash.it/2000/750' %>
          <figcaption class="orbit-caption">Lets Rocket!</figcaption>
        </li>
      </ul>
      <nav class="orbit-bullets">
        <button class="is-active" data-slide="0"><span class="show-for-sr">First slide details.</span><span class="show-for-sr">Current Slide</span></button>
        <button data-slide="1"><span class="show-for-sr">Second slide details.</span></button>
      </nav>
    </div>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <%= yield %>

    <footer>
      <div class="wrap row small-up-1 medium-up-3">
          <div class="column">
            <h4>Useful Links</h4>
            <hr>
            <a href="http://crimson.se" target="_blank"><span>Print Service</span></a><br />
          </div>
          <div class="column">
          </div>
          <div class="column">
          </div>
      </div>
     </footer>
  </body>
</html>
